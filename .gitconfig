# This is Git's per-user configuration file.
[user]
	email = emil@pento.dk
	name = Emil Rasmussen
[core]
	excludesfile = /Users/hagbarth/.gitignore_global
	pager = cat
	editor = vim
[merge]
	tool = diffmerge
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = diffmerge
[commit]
[alias]
	dad = !curl https://icanhazdadjoke.com/ && git add
	pl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	publish = push -u origin !$(git rev-parse --abbrev-ref HEAD)
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
